<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="30dp"
    tools:context="github.rutvijshah.apps.simpletodo.app.edit_todo_item">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_lable"
        android:textSize="25dp"
        android:text="Edit Item Below:"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eExistingItem"
        android:layout_alignBottom="@+id/edit_lable"
        android:hint="Enter New Item"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveItem"
        android:onClick="editTodoItem"
        android:text="Save" />

</LinearLayout>
